<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:background="?android:selectableItemBackground"
    android:padding="3.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:layout_width="40.0dip"
        android:layout_height="40.0dip">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/download_img"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:scaleType="centerInside"
            fresco:placeholderImage="@drawable/ic_download_icon2"
            fresco:actualImageScaleType="centerInside" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7.0dip"
        android:layout_weight="4.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/text_color"
                android:ellipsize="end"
                android:id="@+id/download_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="如果我变成回忆"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/download_speed_layout"
            android:layout_width="fill_parent"
            android:layout_height="10.0dip">

            <TextView
                android:textSize="10.0sp"
                android:id="@+id/download_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--M/--M"
                android:layout_alignParentBottom="true" />

            <TextView
                android:textSize="10.0sp"
                android:id="@+id/download_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:text="---K/s"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:layout_marginRight="10.0dip">
            <ImageView android:layout_gravity="center_vertical"
                android:id="@+id/download_complete_img"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3.0dip"
                android:src="@mipmap/local_fb_icn_ok" />
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/test_color"
                android:layout_gravity="center_vertical"
                android:id="@+id/download_artist"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:singleLine="true" />

            <!--<com.cainiao5.cainiaomusic.ui.widget.NumberProgressBar-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:id="@id/download_progress"-->
                <!--android:layout_width="0.0dip"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginRight="20.0dip"-->
                <!--android:maxHeight="3.0dip"-->
                <!--android:progress="10"-->
                <!--android:secondaryProgress="100"-->
                <!--android:layout_weight="20.0"-->
                <!--style="@style/Widget.AppCompat.ProgressBar.Horizontal" />-->

        </LinearLayout>

        <View android:background="@color/download_line"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginTop="3.0dip" />

    </LinearLayout>

    <LinearLayout android:gravity="center"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/start_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_download_pause" />

        <ImageView android:id="@+id/remove_download"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="6.0dip"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_download_delete" />

    </LinearLayout>
</LinearLayout>